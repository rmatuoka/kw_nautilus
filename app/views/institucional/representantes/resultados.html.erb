<%content_for :title do%>
	Representantes
<%end%>
<%content_for :head do %>
<%=stylesheet_link_tag "internalrepre"%>
<%= javascript_include_tag :defaults %>
<%end%>
<div id='Content_bgrepeat'>
<div id='Content'>
  <div id='Box_left'>
    <%=render :file => "layouts/_menuinternal.html.erb"%>
  </div>
  <div id='Box_right'>
    <%=image_tag("ico_title_internal.png")%>
    <div id='Right_content'>
	  <h1>Representantes</h1>
	  <%=render :partial => "busca"%>
	  <div id='repre_bottom'>
	    	<%if !@Resultados.blank?%>
				<%counter = 0%>
				<%@Resultados.each do |r|%>
					<div id='resultado_busca_<%=counter % 2 %>'>
					  <h1><%=r.name%></h1>
					  <span>Estado:</span> <%=r.state%><br>
					  <span>Região:</span> <%=r.region%><br>
					  <span>E-Mail:</span> <%=r.email%><br>
					  <span>Telefone:</span> <%=r.phone%>
					</div>
				<%counter = counter + 1%>
				<%end%>
			<%else%>
				Não há representantes cadastrados neste estado
			<%end%>

	  </div>
	</div>
  </div>
  
</div>
</div>
<div id='Image_internal'>
  <%=image_tag("img_revenda.png")%>
</div>