<%content_for :title do%>
	Busca
<%end%>
<%content_for :head do %>	
	<%= stylesheet_link_tag "busca" %>
	<%= stylesheet_link_tag "internalbig" %>
<%end%>
<%content_for :featured_image do %>
	<%= image_tag("img_freatured_servicos.png")%>
<%end%>
<div id='Content_bgrepeat'>
<div id="Content">
	<div id="Box_content_internal">
		<br /><br />
		<br /><br />
		<br /><br />
		<h2 class="Title_acquisition_h2">&nbsp;FAÇA SUA BUSCA !</h2>
		<div class="Search">
		<%=form_tag '/busca/resultado', :method => :get, :name=>"formkeyword"%>
			<div class="Search_tab">
			<%=text_field_tag :keyword, nil ,:class=>"Search_input"%>
			</div>
			<%=text_field_tag :keyword, nil ,:class=>"Search_input campo_in "%>
			<%=image_submit_tag "/images/menu/bt_busca.png", :class=>"Bt_busca"%>
		</form>
		</div>
		<br />
		<h2 class="Title_acquisition_h3">RESULTADOS DA BUSCA:</h2>
		<br />
		<hr></hr>
		<% if @Erro %>
			<div class="Item_busca">
				<p class="Text_busca">Preencha o campo Busca!</p>
			</div>
		<% else %>
			<%if (!@Produtos.blank?) && (!@Noticias.blank?) %>
				<%if (!@Produtos.blank?) %>
					<h3 class="Title_busca_h3">Resultados em Produtos</h3><br />
					<% @Produtos.each do |p| %>
							<div class="Item_busca">
								<a href="<%=produto_path(p.id)%>">
									<label class="Title_name"><%= p.title%></label>
									<p class="Text_busca"><%= p.section.title %></p>
								</a>
								<hr></hr>
							</div>
					<%end%>
				<%end%>
				<%if (!@Noticias.blank?) %>
					<h3 class="Title_busca_h3">Resultados em Noticias</h3><br />
					<% @Noticias.each do |n| %>
							<div class="Item_busca">
								<a href="<%=noticia_path(n.id)%>">
									<label class="Title_name"><%= n.title%></label>
									<p class="Text_busca"><%= n.summary %></p>
								</a>
								<hr></hr>
							</div>
					<%end%>							
				<%end%>				
			<% else %>
				<div class="Item_busca">
					<p class="Text_busca">Não foi encontrado nenhum item relacionado com a palavra chave digitada!</p>
				</div>
			<%end%>
		<%end%>
			
