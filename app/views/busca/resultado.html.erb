<%content_for :title do%>
	Busca
<%end%>
<%content_for :head do %>	
	<%= stylesheet_link_tag "busca" %>
	<%= stylesheet_link_tag "internalbig" %>
<%end%>
<%content_for :featured_image do %>
	<%= image_tag("img_freatured_servicos.png")%>
<%end%>
<div id='Content_bgrepeat'>
<div id="Content">
	<div id="Box_content_internal">
		<br><br><br>
		<h1>Resultado da Busca por: <%=params[:keyword] if !params[:keyword].blank?%></h1>
		<br><br><br>
		<% if @Erro %>
			<div class="Item_busca">
				<p class="Text_busca">Preencha o campo Busca!</p>
			</div>
		<% else %>
		
			<%if (!@Produtos.blank?) || (!@Noticias.blank?) %>
				<%if (!@Produtos.blank?) %>
					<h3 class="Title_busca_h3">Resultados em Produtos</h3><br />
					<% @Produtos.each do |p| %>
							<div class="Item_busca">
									<label class=""><a href="<%=produto_path(p.id)%>" class="Title_name"><%= p.title%></a></label><br /><br />
									<p class="Text_busca">
										<%if p.product_images.first%>
											<%=image_tag(p.product_images.first.image.url(:thumb), :align => "left", :style => "margin:0px 10px 0px 0px;")%>
										<%end%>
										<%= raw(p.description) %>
									</p>
								<div id="name" style="clear:both;"></div>
								<hr vspace="10">
							</div>
					<%end%>
				<%end%>
			
				<%if (!@Noticias.blank?) %>
					<h3 class="Title_busca_h3">Resultados em Noticias</h3><br />
					<% @Noticias.each do |n| %>
							<div class="Item_busca">
								<a href="<%=noticia_path(n.id)%>">
									<label class="Title_name"><%= n.title%></label>
									<p class="Text_busca"><%= n.summary %></p>
								</a>
								<hr></hr>
							</div>
					<%end%>							
				<%end%>				
			
			<% else %>
				<div class="Item_busca">
					<p class="Text_busca">Não foi encontrado nenhum item relacionado com a palavra chave digitada!</p>
				</div>
			<%end%>
		<%end%>
			
